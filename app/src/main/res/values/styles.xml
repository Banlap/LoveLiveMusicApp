<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- 启动页闪屏 -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_llmp_new_3_1</item>
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
    </style>

    <style name="NormalTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="play_controller_bg">@drawable/shape_button_alpha_50</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="play_controller_bg">@drawable/shape_button_white_alpha_50</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <!-- 在这设置 -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LockScreenBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/YourCustomWindowAnimation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>


    <style name="YourCustomWindowAnimation">
        <!-- 定义你的过渡动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- 主页菜单动画 -->
    <style name="showPopupMenuAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/popup_menu_exit</item>
        <item name="android:windowEnterAnimation">@anim/popup_menu_enter</item>
    </style>

    <!-- 播放模式菜单动画 -->
    <style name="showPopupChangeModeAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/popup_change_mode_exit</item>
        <item name="android:windowEnterAnimation">@anim/popup_change_mode_enter</item>
    </style>

    <!--面板里面的更多菜单动画-->
    <style name="showPopupMoreMenuAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/popup_more_menu_exit</item>
        <item name="android:windowEnterAnimation">@anim/popup_more_menu_enter</item>
    </style>

    <!--新模式面板里面的更多菜单动画-->
    <style name="showPopupNewMoreMenuAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/popup_new_more_menu_exit</item>
        <item name="android:windowEnterAnimation">@anim/popup_new_more_menu_enter</item>
    </style>

</resources>